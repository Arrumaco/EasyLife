<h1>Verificar Autor</h1>
<% form_for(@autor) do |f| %>
  <%= f.error_messages %>
  <table  frame = "box", width = "500">
    <tr>
      <td>
      	<%= link_to image_tag("Add.gif", :mouseover => "Addmo.gif", :border => 0 ), new_titulo_path %>
        <%= link_to image_tag("Select.gif", :mouseover => "Selectmo.gif", :border => 0 ), edit_autor_path(@autor) %>
        <%= link_to image_tag("Cancel.gif", :mouseover => "Cancelmo.gif", :border => 0), autors_path %>
      </td>
    </tr> 
  </table> 
  <br /> 
  <table> 
    <tr> <td width=150, align=left>ID </td> <td><%= @autor.id %></td> </tr>
    <tr> <td width=150, align=left>Nombre </td> <td><%= @autor.nombre %></td> </tr>
    <tr> <td width=150, align=left>Fecha </td> <td><%= @autor.fecha %></td> </tr>
  </table>
  
  <div id="titulos">
    <br>
  	<%= render :partial => "titulos", :object => @titulos %>
	<br>
  </div>
  <%= will_paginate @titulos %>
<% end %>


<% form_for :titulo, @titulo, :url => "/titulos/create" do |f| %>
  <%= f.error_messages %>
  <br /> 
  <table>  
    <tr>
      <td width=120, align=left>Nombre</td> 
      <td width=120, align=right>Fecha Ingreso</td>
	</tr>    	
    <tr>
	  <td style="width: 302px;"><%= f.text_area :nombre, :cols=>50, :rows => 1 %></td>
	  <td><span style="visibility:hidden"><%= f.text_area :autor_id, :cols =>3, :rows =>1 %></span></td>
	  <td><%= f.calendar_date_select :fecha, :popup => "force" %></td> 
      <td> <%= image_submit_tag "OK.gif", :id => "BotonOK1" %>  </td>
	</tr> 
  </table>
<% end %>
