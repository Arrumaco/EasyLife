<title>Este es el parcial</title>
<table class="tope">
 <tr>
    <th style="width: 58px;" <%= sort_td_class_helper "id" %>> <%= sort_link_helper "Id", "id" %> </th>
    <th style="width: 300px;" <%= sort_td_class_helper "nombre" %>> <%= sort_link_helper "Nombre", "nombre" %> </th>
    <th style="width: 300px;" <%= sort_td_class_helper "fecha" %>> <%= sort_link_helper "Fecha", "fecha" %> </th>
 </tr>
</table>

<table class="lista";>
<% @autors.each do |autor| %>
  <tr class="<%= cycle("Impar","Par") %>">
    <td style="width: 62px;"><%= autor.id %></td>
    <td style="width: 302px;"><%= autor.nombre[0,40] %></td>
    <td style="width: 302px;"><%= autor.fecha %></td>	
	<td><%= link_to image_tag("modetail.gif", :mouseover => "modetailmo.gif", :border => 0), autor %></td>
    <td><%= link_to image_tag("Select.gif", :mouseover => "Selectmo.gif", :border => 0), edit_autor_path(autor) %></td>
    <td><%= link_to image_tag("Delete.gif", :mouseover => "Deletemo.gif", :border => 0), autor, :confirm => 'Confirma la operacion?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br>
 <%= will_paginate @autors %>
</br>